{
  "name": "intelligence-engine",
  "projectType": "application",
  "sourceRoot": "backend/intelligence/engine/src",
  "targets": {
    "serve": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "command": "python3 -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
        "cwd": "backend/intelligence/engine"
      },
      "configurations": {
        "production": {
          "command": "python3 -m uvicorn main:app --host 0.0.0.0 --port 8000 --workers 4"
        }
      }
    },
    "build": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "command": "python3 -m pip install -r requirements.txt",
        "cwd": "backend/intelligence/engine"
      },
      "outputs": ["{projectRoot}/.venv"],
      "dependsOn": []
    },
    "test": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "command": "python3 -m pytest --cov=. --cov-report=xml --cov-report=html",
        "cwd": "backend/intelligence/engine"
      },
      "outputs": ["{projectRoot}/htmlcov", "{projectRoot}/coverage.xml"],
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "command": "python3 -m flake8 . && python3 -m black --check .",
        "cwd": "backend/intelligence/engine"
      }
    },
    "format": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "command": "python3 -m black . && python3 -m isort .",
        "cwd": "backend/intelligence/engine"
      }
    },
    "docker-build": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "command": "docker build -f infrastructure/Dockerfile -t callosum-intelligence-engine .",
        "cwd": "backend/intelligence/engine"
      }
    }
  },
  "tags": ["backend", "python", "ai", "api"]
}
