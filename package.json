{
  "name": "callosum",
  "version": "1.0.0",
  "description": "A polyglot desktop application for personality-driven AI with DSL support",
  "private": true,
  "workspaces": [
    "frontend/*",
    "shared/*"
  ],
  "scripts": {
    "dev": "nx run-many --target=serve --projects=desktop-app,ai-engine,graph-engine,event-processor --parallel",
    "dev:production": "nx run-many --target=serve --configuration=production --projects=desktop-app,ai-engine,graph-engine,event-processor --parallel",
    "dev:docker": "./infrastructure/dev.sh",
    "dev:quick": "./infrastructure/dev.sh quick",
    "dev:stop": "./infrastructure/dev.sh stop",
    "dev:restart": "./infrastructure/dev.sh restart",
    "dev:rebuild": "./infrastructure/dev.sh rebuild",
    "dev:logs": "./infrastructure/dev.sh logs",
    "dev:status": "./infrastructure/dev.sh status",
    "docker:build": "docker compose -f infrastructure/compose.yml build",
    "docker:up": "docker compose -f infrastructure/compose.yml up -d",
    "docker:down": "docker compose -f infrastructure/compose.yml down",
    "docker:logs": "docker compose -f infrastructure/compose.yml logs -f",
    "docker:clean": "./infrastructure/cleanup.sh gentle",
    "docker:clean-project": "./infrastructure/cleanup.sh project",
    "docker:clean-all": "./infrastructure/cleanup.sh aggressive",
    "docker:reset": "./infrastructure/cleanup.sh project --with-volumes && docker compose -f infrastructure/compose.yml build --no-cache",
    "build": "nx run-many --target=build --all --parallel",
    "build:production": "nx run-many --target=build --configuration=production --all --parallel",
    "test": "nx run-many --target=test --all --parallel",
    "test:coverage": "nx run-many --target=test --all --parallel --coverage",
    "lint": "nx run-many --target=lint --all --parallel",
    "format": "nx run-many --target=format --all --parallel",
    "clean": "nx run-many --target=clean --all --parallel",
    "affected:build": "nx affected --target=build --parallel --max-parallel=3",
    "affected:test": "nx affected --target=test --parallel --max-parallel=3",
    "affected:lint": "nx affected --target=lint --parallel --max-parallel=3",
    "affected:all": "nx affected --target=build,test,lint --parallel --max-parallel=3",
    "graph": "nx graph",
    "dep-graph": "nx dep-graph",
    "reset": "nx reset",
    "daemon:start": "nx daemon --start",
    "daemon:stop": "nx daemon --stop",
    "show:projects": "nx show projects",
    "workspace-lint": "nx workspace-lint --fix"
  },
  "devDependencies": {
    "nx": "21.5.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
