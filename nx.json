{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "installation": {
    "version": "21.5.3"
  },
  "targetDefaults": {
    "build": {
      "cache": true,
      "dependsOn": [
        "^build"
      ],
      "inputs": ["production", "^production"],
      "outputs": ["{projectRoot}/dist", "{projectRoot}/build"]
    },
    "test": {
      "cache": true,
      "inputs": ["default", "^production", "{workspaceRoot}/jest.preset.js"],
      "outputs": ["{projectRoot}/coverage"]
    },
    "lint": {
      "cache": true,
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json", "{workspaceRoot}/.eslintignore"],
      "outputs": []
    },
    "serve": {
      "cache": false
    },
    "e2e": {
      "cache": true,
      "inputs": ["default", "^production"],
      "outputs": ["{projectRoot}/dist/cypress"]
    },
    "format": {
      "cache": true,
      "inputs": ["default"]
    },
    "clean": {
      "cache": false
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/test-setup.[jt]s"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/package.json",
      "{workspaceRoot}/nx.json",
      "{workspaceRoot}/tsconfig.base.json"
    ]
  },
  "generators": {
    "@nx/workspace:library": {
      "linter": "eslint"
    }
  },
  "defaultProject": "frontend/desktop-app",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "lint", "test", "e2e", "format"],
        "parallel": 3,
        "useDaemonProcess": true
      }
    }
  },
  "parallel": 3,
  "useDaemonProcess": true,
  "affected": {
    "defaultBase": "HEAD~1"
  },
  "cli": {
    "packageManager": "npm"
  },
  "workspaceLayout": {
    "appsDir": ".",
    "libsDir": "shared"
  },
  "release": {
    "version": {
      "preVersionCommand": "nx run-many --target=build --all"
    }
  },
  "nxIgnore": [
    "node_modules",
    ".git",
    "dist",
    "build",
    "coverage",
    ".nyc_output"
  ]
}